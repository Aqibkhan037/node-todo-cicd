<!DOCTYPE html>
<html lang="en">
<head>
    <title>Todo List APP</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 600px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        h1 {
            background-color: #4CAF50;
            color: white;
            margin: 0;
            padding: 20px;
            text-align: center;
            font-size: 24px;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        ul li {
            background: #fff;
            border-bottom: 1px solid #ddd;
            padding: 15px;
            position: relative;
            transition: background 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        ul li:last-child {
            border-bottom: none;
        }

        ul li:hover {
            background: #f9f9f9;
        }

        ul li span {
            flex-grow: 1;
            margin-right: 50px;
        }

        .btn {
            border: none;
            background: none;
            cursor: pointer;
            font-size: 18px;
            transition: color 0.3s ease;
        }

        .delete-btn {
            color: #e74c3c;
        }

        .edit-btn {
            color: #f39c12;
            margin-right: 10px;
        }

        .delete-btn:hover {
            color: #c0392b;
        }

        .edit-btn:hover {
            color: #e67e22;
        }

        form {
            background: #fff;
            padding: 20px;
            border-top: 1px solid #ddd;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }

        input[type="submit"] {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Todo List - Tocs Project</h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <span><%- todo %></span>
                <button class="btn edit-btn" onclick="location.href='/todo/<%= index %>'">✎</button>
                <button class="btn delete-btn" onclick="location.href='/todo/delete/<%= index %>'">✘</button>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <label for="newtodo">What should I do?</label>
            <input type="text" name="newtodo" id="newtodo" autofocus />
            <input type="submit" value="Add" />
        </form>
    </div>
</body>
</html>
